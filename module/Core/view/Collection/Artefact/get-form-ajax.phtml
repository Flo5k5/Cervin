<?php 
$this->headLink()->prependStylesheet($this->basePath() . '/css/datepicker.css');

$form->prepare();
$form->setAttribute('action', $this->url('artefact'));
$form->setAttribute('method', 'post');
$form->setAttribute('class','form-horizontal');
echo $this->form()->openTag($form);

foreach ($form as $element):
 	if (!$element instanceof Zend\Form\Element\Button && !$element instanceof Zend\Form\Element\Hidden): ?>
        <div class="control-group">
        <label class="control-label" for="inputEmail">
        	<?php echo $this->formLabel($element); ?>
        </label>
    <?php endif ?>
        
    <?php if ($element instanceof Zend\Form\Element\Button): ?>
        <div class="form-actions">
        	<?php echo $this->formButton($element) ?>
    <?php else: ?>
        <div class="controls">
            <?php echo $this->formInput($element -> setLabelAttributes(array('class' => 'control-label')))
            . $this->formElementErrors($element) ?>
        </div>
    <?php endif ?>
    </div>
<?php endforeach;
echo $this->form()->closeTag();

$this->headScript()->appendFile($this->basePath() . '/js/bootstrap-datepicker.js') ;
?>
<script type="text/javascript">
    $('.date').datepicker();
</script>